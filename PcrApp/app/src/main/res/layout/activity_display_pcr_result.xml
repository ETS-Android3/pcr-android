<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_pcr_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="10"
    tools:context="com.example.vishaalprasad.pcrapp.DisplayPcrResultActivity">

    <!-- Per Tube -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="@string/per_tube"
        android:textColor="#111" />

    <!-- Master Mix -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="@string/master_mix"
        android:textColor="#111" />

    <!--Variables (left side)-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_row="2"
        android:text="@string/fprimer"
        android:textColor="#111" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_row="3"
        android:text="@string/rprimer"
        android:textColor="#111" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_row="4"
        android:text="@string/buffer"
        android:textColor="#111" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_row="5"
        android:text="@string/polymerase"
        android:textColor="#111" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_row="1"
        android:text="@string/dntp"
        android:textColor="#111" />


</GridLayout>
