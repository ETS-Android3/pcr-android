<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell_result_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="6dp">

    <TextView
        android:id="@+id/cell_result_reactant_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="42"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:lines="1"
        android:padding="2dp"
        android:text="@string/reaction_quantity"
        android:textColor="@android:color/black"
        android:textSize="@dimen/main_text_size" />

    <TextView
        android:id="@+id/cell_result_reactant_per_tube"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="29"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:inputType="number"
        android:padding="2dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/main_text_size"
        tools:text="50.6μL" />

    <TextView
        android:id="@+id/cell_result_reactant_master_mix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="29"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/main_text_size"
        tools:text="100μL" />

</LinearLayout>