<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/pref_stock_conc_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/hint_enter_stock_concentration"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pref_stock_conc_unit"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/pref_stock_conc_unit"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/pref_stock_conc_input"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pref_stock_conc_input"
        app:layout_constraintVertical_bias="0.526" />

</android.support.constraint.ConstraintLayout>